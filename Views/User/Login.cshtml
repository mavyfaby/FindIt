@{
  ViewData["Title"] = "Login";
}

@model FindIt.Models.UserModel

<div class="flex justify-center items-center flex-col w-full h-[100dvh]">
  <article class="flex justify-center flex-col p-6 w-full sm:w-3/4 md:w-3/5 lg:w-1/3 2xl:w-1/4">
    <h5 class="font-bold text-primary">Login</h5>
    <p class="my-0 text-outline">Welcome back! Please login your account.</p>
    
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
      <div class="field label prefix fill my-4">
        <i>person</i>
        @Html.TextBoxFor(model => model.Username, new { Type = "text" })
        <label>Username</label>
      </div>

      <div class="field label prefix fill mb-4">
        <i>key</i>
        @Html.TextBoxFor(model => model.Password, new { Type = "password" })
        <label>Password</label>
      </div>
      <div class="flex justify-end mt-5">
        <button class="font-medium">Login</button>
      </div>
    }
  </article>

  <p class="mt-5">Don't have an account? <a asp-action="Signup" class="text-primary">Register</a></p>
</div>