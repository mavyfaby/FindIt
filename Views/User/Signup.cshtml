@{
  ViewData["Title"] = "Signup";
}

@model FindIt.Models.UserModel

<div class="flex justify-center items-center flex-col w-full h-[100dvh]">
  <article class="flex justify-center flex-col p-6 w-full sm:w-3/4 md:w-3/5 lg:w-1/2 xl:w-1/3">
    <h5 class="font-bold text-primary">Signup</h5>
    <p class="my-0 text-outline">Create an account</p>
    
    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
      <div class="mt-4">
        <div class="grid grid-cols-1 md:grid-cols-2">
          <div class="field label prefix fill">
            <i>person</i>
            @Html.TextBoxFor(model => model.FirstName, new { Type = "text", required = true })
            <label>First name</label>
          </div>
          <div class="field label prefix fill">
            <i>person</i>
            @Html.TextBoxFor(model => model.LastName, new { Type = "text", required = true })
            <label>Last name</label>
          </div>
        </div>

        <div class="field label prefix fill my-4">
          <i>mail</i>
          @Html.TextBoxFor(model => model.Email, new { Type = "email", required = true })
          <label>Email</label>
        </div>

        <div class="field label prefix fill my-4">
          <i>phone</i>
          @Html.TextBoxFor(model => model.PhoneNumber, new { Type = "tel", required = true })
          <label>Mobile Number</label>
        </div>

        <div class="field label prefix fill my-4">
          <i>person</i>
          @Html.TextBoxFor(model => model.Username, new { Type = "text", required = true })
          <label>Username</label>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2">
          <div class="field label prefix fill mb-4">
            <i>key</i>
            @Html.TextBoxFor(model => model.Password, new { Type = "password", required = true })
            <label>Password</label>
          </div>

          <div class="field label prefix fill">
            <i>key</i>
            @Html.TextBoxFor(model => model.ConfirmPassword, new { Type = "password", required = true })
            <label>Confirm Password</label>
          </div>
        </div>

        <div class="flex justify-end mt-5">
          <button class="font-medium">Create Account</button>
        </div>
      </div>
    }
  </article>
  <p class="mt-5">Have an account? <a asp-action="Login" class="text-primary">Login</a></p>
</div>